{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "rootDir": "./src",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}